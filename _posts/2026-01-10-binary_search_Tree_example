#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <memory.h>

#define MAX_WORD_SIZE 100
#define MAX_MEANING_SIZE 200

//노드의 데이터 형식, 여기서는 영어사전 프로그램이 목적인 코드이므로, 영어단어와 한국어 뜻을 모두 입력할 수 있게끔 구조체로 설정한다.
typedef struct {
	char word[MAX_WORD_SIZE];
	char meaning[MAX_MEANING_SIZE];
}element;

typedef struct TreeNode {
	element key;
	struct TreeNode* left, * right;
}TreeNode;

// 만약 e1<e2 이면 -1, > 이면 1, == 이면 0 반환한다. 이는 탐색에서의 알파벳 비교를 위함이다.
int compare(element e1, element e2) {
	return strcmp(e1.word, e2.word);
}

void display(TreeNode* p) { //중위 순회 및 출력함수다.
	if (p != NULL) {
		printf("(");
		display(p->left);
		printf("%s:%s", p->key.word, p->key.meaning);
		display(p->right);
		printf(")");
	}
}

TreeNode* search(TreeNode* root, element key) { //이진탐색트리 탐색 함수
	TreeNode* p = root;
	while (p != NULL) {
		if (compare(key, p->key) == 0) //탐색으로 찾았을 경우
			return p;
		else if (compare(key, p->key) < 0)
			p = p->left;
		else if (compare(key, p->key) > 0)
			p = p->right;
	}
	return p;
	//탐색이 실패된다면 p는 자연히 NULL으로 반환된다.
}

TreeNode* new_node(element item) {
	TreeNode* temp = (TreeNode*)malloc(sizeof(TreeNode));
	temp->key = item;
	temp->left = temp->right = NULL;
	return temp;
}

TreeNode* insert_node(TreeNode* node, element key) {
	//트리가 공백일 경우 새로운 노드를 반환한다.
	if (node == NULL) return new_node(key);

	if (compare(key, node->key) < 0)
		node->left = insert_node(node->left, key);
	else if (compare(key, node->key) > 0)
		node->right = insert_node(node->right, key);

	return node;
}
TreeNode* min_value_node(TreeNode* node) {
	TreeNode* current = node;
	//나중에는 삭제하고 싶은 노드 기준 오른쪽 트리에서 맨 왼쪽 단말노드를 찾을때 쓴다.
	while (current->left != NULL)
		current = current->left;
	return current;
}

TreeNode* delete_node(TreeNode* root, element key) {
	if (root == NULL) return root;
	if (compare(key, root->key) < 0) //탐색
		root->left = delete_node(root->left, key);
	if (compare(key, root->key) > 0)
		root->right = delete_node(root->right, key);

	//탐색 끝, 키와 루트가 같은 경우. 즉 노드 삭제 단계
	else {
		if (root->left == NULL) {
			TreeNode* temp = root->right;
			free(root);
			return temp;
		}
		else if (root->right == NULL) {
			TreeNode* temp = root->left;
			free(root);
			return temp;
		}

		TreeNode* temp = min_value_node(root->right);

		root->key = temp->key;
		root->right = delete_node(root->right, temp->key);
	}
	return root;
}

void help() {
	printf("\n**** i: 입력, d: 삭제, s: 탐색, p: 출력, q: 종료 ****: ");
}

int main() {
	char command;
	element e;
	TreeNode* root = NULL;
	TreeNode* tmp;

	do {
		help();
		command = getchar();
		getchar(); //입력에 문제가 생기지 않게 하기 위하여 버퍼에서 엔터키를 제거한다.
		switch (command) {
		case 'i':
			printf("단여:");
			gets_s(e.word, MAX_WORD_SIZE);
			printf("의미:");
			gets_s(e.meaning, MAX_MEANING_SIZE);
			root = insert_node(root, e);
			break;

		case 'd':
			printf("단어:");
			gets_s(e.word, MAX_WORD_SIZE);
			root = delete_node(root, e);
			break;

		case 'p':
			display(root);
			printf("\n");
			break;

		case 's':
			printf("단어:");
			gets_s(e.word, MAX_WORD_SIZE);
			tmp = search(root, e);
			if (tmp != NULL)
				printf("의미:%s\n", e.meaning);
			break;
		}
		
	} while (command != 'q');
	return 0;
}
