#include <stdio.h>
#include <stdlib.h>

#define MAX_LIST_SIZE 100

//배열로써 리스트를 구현한다면 장점은 구현이 비교적 간단하고, 속도가 빠르다.
//단점은 배열로 구현을 하였으므로 동적으로 크기를 늘리거나 줄이는 것이 힘들다. 또한, 리스트의 중간에 새로운 데이터를 삽입하거나 삭제하기 위해서는 기존의 데이터들을 이동하여야 한다.
typedef int element;
typedef struct {
	element array[MAX_LIST_SIZE]; // 배열 정의
	int size; //현재 리스트에 저장된 항목들의 개수
}ArrayListType;

//항상 매개변수로 구조체를 전할때, 구조체의 포인터를 전달하여야만 원본이 변한다.

void error(char* message) {
	fprintf(stderr, "%s\n", message);
	exit(1);
}

void init(ArrayListType* L) {
	L->size = 0;
}

int is_empty(ArrayListType* L) {
	return L->size == 0;
}

int is_full(ArrayListType* L) {
	return L->size == MAX_LIST_SIZE;
}

element get_entry(ArrayListType* L, int pos) {
	if (pos < 0 || pos >= L->size)
		error("위치 오류");
	return L->array[pos];
}

void print_list(ArrayListType* L) {
	int i;
	for (i = 0; i < L->size; i++)
		printf("%d->", L->array[i]);
	printf("\n");
}

void insert_last(ArrayListType* L, element item) {
	if (L->size >= MAX_LIST_SIZE) {
		error("리스트 오버플로우");
	}
	L->array[L->size++] = item;
}  //마지막 위치에 요소를 삽입하는 것.

void insert(ArrayListType* L, int pos, element item) {
	if (!is_full(L) && (pos >= 0) && (pos <= L->size)) {
		for (int i = (L->size - 1); i >= pos; i--) //끝 인덱스에서 사용자가 변수로 넘긴 pos까지 전인덱스로 반복해서 가면서
			L->array[i + 1] = L->array[i]; //배열에 있어서, 그 구간의 요소들을 모두 다음 인덱스로 보낸다.
		L->array[pos] = item; //이후 원하는 인덱스에 요소를 대입
		L->size++;
	}
} //배열 위치의 중간 인덱스에 요소르 삽입 한다.

element delete(ArrayListType* L, int pos) {
	element item;

	if (pos < 0 || pos >= L->size)
		error("위치 오류");
	item = L->array[pos];
	for (int i = pos; i < (L->size - 1); i++)
		L->array[i] = L->array[i + 1]; //요소들을 앞 인덱스로 대입시킨다.
	//이때 요소에 대해서 따로 삭제를 하지 않아도 되는 이유는 말그대로 그 요소의 인덱스에 대한 것도 뒤의 인덱스 요소에 의해 대체될 거기 때문이다.
	L->size--;
	return item;
}
int main() {
	//ArrayListType을 정적으로 생성하고 ArrayListType를 가르키는 포인터를 함수의 매개변수로 전달한다.
	ArrayListType list;

	init(&list);
	insert(&list, 0, 10); print_list(&list); //insert 함수는 원하는 인덱스에 요소를 넣으며 동시에, 나머지는 한칸씩 밀어낸다. 삭제는 없다.
	insert(&list, 0, 20); print_list(&list);
	insert(&list, 0, 30); print_list(&list);
	insert_last(&list,40); print_list(&list);
	delete(&list, 0); print_list(&list); //0번째 항목을 삭제한다.
}
